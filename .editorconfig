root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.php]
indent_size = 4

[src/Console/stubs/*.stub]
indent_size = 4

[src/Console/stubs/views/*.stub]
indent_size = 2

[*.blade.php]
indent_size = 2
